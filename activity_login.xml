<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#800080"
    android:weightSum="1">

    <ImageView
        android:layout_width="180sp"
        android:layout_height="120sp"
        android:id="@+id/piratelogo"
        android:src="@drawable/pirateimage"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:layout_marginTop="20dp" />

    <RelativeLayout
        android:layout_width="323dp"
        android:layout_height="269dp"
        android:background="#fffefe"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Login"
        android:textSize="25dp"
        android:id="@+id/textlogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:inputType="textEmailAddress"
        android:gravity="center"
        android:hint="Username"
        android:singleLine="true"
        android:layout_weight="0.30"
        android:textSize="25dp"
        android:layout_marginBottom="10dp"
        android:background="#fffefe"
        android:layout_below="@+id/textlogin"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/caldroid_black" />

    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:inputType="textPassword"
        android:gravity="center"
        android:hint="Password"
        android:singleLine="true"
        android:textSize="25dp"
        android:background="#fffefe"
        android:layout_weight="0.30"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@+id/email_sign_in_button"
        android:layout_alignStart="@+id/email_sign_in_button"
        android:textColor="@color/caldroid_black" />


    <ImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:id="@+id/pwdimg"
        android:layout_gravity="left"
        android:src="@drawable/iconpassword"
        android:layout_alignBottom="@+id/password"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="5dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:id="@+id/emailimg"
        android:layout_gravity="left"
        android:src="@drawable/iconmail"
        android:layout_alignBottom="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="5dp" />

    <Button
        android:id="@+id/login"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="Login"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp" />
    </RelativeLayout>

</LinearLayout>